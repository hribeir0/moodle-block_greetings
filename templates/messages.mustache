{{!
    @template block_greetings/messages

    Template for displaying greeting messages

    Example context (json):
    {
    }
}}
<div class="box py-3 card-columns" role="list">
{{#messages}}
    <div class="card" style="background: {{cardbackgroundcolor}}" role="listitem">
        <div class="card-body">
            <p class="card-text">{{{message}}}</p>
            <p class="card-text">{{#str}} postedby, block_greetings, {{firstname}} {{/str}}</p>
            <p class="card-text">
                <small class="text-muted">
                    {{#userdate}} {{timecreated}}, {{#str}} strftimedaydatetime, core_langconfig {{/str}} {{/userdate}}
                </small>
            </p>
            {{#candelete}}
                <p class="card-footer text-center">
                    <a
                        href="{{config.wwwroot}}/my/?action=del&id={{id}}&sesskey={{config.sesskey}}"
                        role="button">
                        {{#pix}} t/delete, core, {{#str}} delete {{/str}} {{/pix}}
                    </a>
                    <a
                        href="{{config.wwwroot}}/blocks/greetings/edit.php?id={{id}}"
                        role="button">
                        {{#pix}} t/edit, core, {{#str}} edit {{/str}} {{/pix}}
                    </a>
                </p>
            {{/candelete}}
        </div>
    </div>
{{/messages}}
</div>
